# Cloud broker URL (Render/Railway/etc)
CLOUD_BASE_URL=https://your-cloud-backend.example.com

# Unique per site/Pi
AGENT_ID=site-bucharest

# Must match cloud backend AGENT_SHARED_SECRET
AGENT_SHARED_SECRET=replace-with-strong-random-secret

# Local Pi backend URL
LOCAL_BACKEND_URL=http://127.0.0.1:8000

# Optional tuning
AGENT_POLL_INTERVAL_SECONDS=2
AGENT_MAX_JOBS_PER_POLL=5
AGENT_REQUEST_TIMEOUT_SECONDS=20
